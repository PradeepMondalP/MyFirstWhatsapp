<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/receiver_message_text_2"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:text=""
            android:padding="12dp"

            android:textSize="14sp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/receiver_message_text_background"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/message_profile_image"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/id_receiver_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/receiver_message_text_2"
            android:layout_marginTop="-1dp"
            android:text="10:45 PM"
            android:textSize="12sp"

            />




        <ImageView
            android:id="@+id/id_mesg_sender_image_file"
            android:layout_width="270dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:layout_height="200dp" />

        <ImageView
            android:id="@+id/id_mesg_receiver_image_file"
            android:layout_width="270dp"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_alignParentStart="true"
            android:layout_height="200dp" />

            <TextView
                android:id="@+id/sender_message_text_2"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/id_sender_time"
                android:textColor="@android:color/black"
                android:layout_marginStart="70dp"
                android:text=""
                android:padding="12dp"
                android:textSize="14sp"
                android:background="@drawable/sender_message_text_background"
                android:layout_marginTop="2dp"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/id_sender_time"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:drawableRight="@drawable/message_got_read_receipt_from_target"
            android:paddingTop="20dp"
            android:text="10:45PM"
            android:textSize="12sp" />




    </RelativeLayout>


</RelativeLayout>


