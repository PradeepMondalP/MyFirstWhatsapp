<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/receiver_message_text_in_group_chat"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@android:color/black"
        android:text="hello "
        android:padding="12dp"
       android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/receiver_message_text_background"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/sender_message_text_in_group_chat"
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:text="hi pradeep"
        android:padding="12dp"
        android:textSize="14sp"
        android:background="@drawable/sender_message_text_background"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content" />




</RelativeLayout>