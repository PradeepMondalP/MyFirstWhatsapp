<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_wallpaper"
    tools:context=".Activity_During_Sending_Image_Activity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/toolbar_during_sending_image"/>

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/id_during_send_message_full_imageView"
        android:layout_below="@+id/toolbar_during_sending_image"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/id_myLineraLayout_in_during_mesg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/id_myLineraLayout_in_during_mesg"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/id_during_send_message_text"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginBottom="10dp"
            android:layout_margin="4dp"
            android:hint="type your message"
            android:background="@drawable/input"
            android:padding="12dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/id_during_send_message_button"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            app:rippleColor="@android:color/holo_blue_light"
            android:backgroundTint="#40E214"
            app:elevation="6dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_send_message"
            app:borderWidth="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>