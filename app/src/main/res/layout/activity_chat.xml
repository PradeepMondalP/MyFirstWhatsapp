<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <include
        layout="@layout/app_bar_layout"
        android:id="@+id/id_abc"/>

    <ImageView
        android:id="@+id/id_my_chat_activity_background"
        android:layout_width="match_parent"
        android:layout_below="@+id/id_abc"
        android:background="@drawable/default_wallpaper"
        android:layout_height="match_parent">

    </ImageView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler_chat_act"
        android:layout_above="@+id/id_myLineraLayout"
        android:layout_below="@+id/id_abc"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/id_myLineraLayout"
        android:layout_width="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/id_chat_activity_send_message_button"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/input"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/id_emoji_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_my_emoji"/>


        <EditText
            android:id="@+id/id_chat_activity_message_text"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_marginBottom="10dp"
            android:layout_margin="4dp"
            android:hint="type your message"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/id_selct_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_photo_camera_black_24dp"/>


        <ImageButton
            android:id="@+id/id_select_file_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_insert_drive_file_black_24dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/id_chat_activity_send_message_button"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        app:rippleColor="@android:color/holo_blue_light"
        android:backgroundTint="#40E214"
        app:elevation="6dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:fabSize="auto"
        app:srcCompat="@drawable/ic_send_message"
        app:borderWidth="0dp"
        android:layout_height="wrap_content" />


</RelativeLayout>